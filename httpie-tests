COURSE MEMBERSHIP:

http -a teacher1:securepassword GET  http://localhost:8000/api/v1/courses/{course_id}/teachers/
http -a teacher1:securepassword POST http://localhost:8000/api/v1/courses/{course_id}/teachers/ user="{teacher_uuid}"
http -a teacher1:securepassword DELETE http://localhost:8000/api/v1/courses/{course_id}/teachers/{teacher_uuid}/

http -a teacher1:securepassword GET  http://localhost:8000/api/v1/courses/24ff680f-460b-42c2-9aba-1b5e772b71b2/students/
http -a teacher1:securepassword POST http://localhost:8000/api/v1/courses/24ff680f-460b-42c2-9aba-1b5e772b71b2/students/ user="ea6d1f21-f265-4897-bb73-015eec3c547a"
